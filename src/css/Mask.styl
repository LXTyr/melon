@require "./base.styl"
@require "nib"

.{$-melon-class-prefix}-mask

    position: fixed
    height: 100%
    width: 100%
    z-index: -1
    top: 0
    opacity: 0
    -webkit-tap-highlight-color: $-melon-colors.transparent
    will-change: opacity
    transform: translateZ(0)
    transition: all 450ms cubic-bezier(0.23, 1, 0.32, 1) 50ms
    background-color: $-melon-colors.lightBlack

    &.state-show
        opacity: 1
        will-change: opacity
        z-index: $-melon-z-index.dialog - 1

        &.state-closing
            opacity: 0
