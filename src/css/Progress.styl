@import "./base.styl"

$-melon-progress-linear = {
    position: relative
    height: 0.33em
    display: block
    width: 100%
    background-color: $-melon-colors.cyan100
    border-radius: 0.167em
    margin: 0
    overflow: hidden
    font-size: $-melon-medium-font-size
}

$-melon-progress-circle = {
    position: relative
    display: inline-block
    margin: 0.625em
    width: 3.125em
    height: 3.125em
    font-size: $-melon-medium-font-size
}


.{$-melon-class-prefix}-progress.variant-linear

    {$-melon-progress-linear}

    &.variant-determinate .{$-melon-class-prefix}-progress-bar

        height: 100%
        transition: width 0.3s linear 0ms
        background-color: $-melon-colors.cyan500

    &.variant-indeterminate .{$-melon-class-prefix}-progress-bar

        height: 100%

        .{$-melon-class-prefix}-progress-bar1,
        .{$-melon-class-prefix}-progress-bar2

            position: absolute
            background-color: $-melon-colors.cyan500
            top: 0
            left: 0
            bottom: 0

        .{$-melon-class-prefix}-progress-bar1

            transition: all 840ms cubic-bezier(0.650, 0.815, 0.735, 0.395)

        .{$-melon-class-prefix}-progress-bar2

            transition: all 840ms cubic-bezier(0.165, 0.840, 0.440, 1.000)


.{$-melon-class-prefix}-progress.variant-circle

    {$-melon-progress-circle}

    .{$-melon-class-prefix}-progress

        &-wapper

            width: 50px
            height: 50px
            margin: 0.3125em
            display: inline-block
            transition: 20s transform linear 0ms

        &-svg

            width: 50px
            height: 50px
            position: relative

        &-path

            stroke: $-melon-colors.cyan500
            stroke-dashoffset: 0
            stroke-linecap: round
            transition: all 0.3s linear 0ms
