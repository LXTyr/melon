@require './base.styl'
@require './Ripple.styl'
@require './Icon.styl'

.{$-melon-class-prefix}-box-group

    position: relative
    display: inline-block
    width: $-melon-boxgroup.width

    &-option
        display: flex
        align-items: center
        height: 2em
        color: $-melon-boxgroup-option.color
        cursor: pointer

        > input
            display: none

        &-icon
            display: inline-flex
            position: relative
            size: 2em
            align-items: center
            justify-content: center

            >.{$-melon-class-prefix}-icon
                font-size: 1.2em
                transition: all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms

            >.{$-melon-class-prefix}-center-ripple
                border-radius: 50%

        &.state-checked &-icon > .{$-melon-class-prefix}-icon
            color: $-melon-boxgroup-option-icon-checked.color

        &.state-disabled
            color: $-melon-boxgroup-option-icon-disabled.color
            cursor: not-allowed

    &.state-invalid &-option .ui-icon
        color: $-melon-boxgroup-option-icon-invalid.color

    &.variant-horizontal
        display: inline-flex
        align-items: center
        margin-left: -1em
        width: auto

        .{$-melon-class-prefix}-box-group-option
            display: inline-flex
            margin-left: 1em

            > .{$-melon-class-prefix}-icon
                margin-right: .5em

        .{$-melon-class-prefix}-validity
            margin-left: 1.5em
