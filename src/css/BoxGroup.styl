@import "./base.styl"

.{$-melon-class-prefix}-boxgroup

    position: relative
    display: inline-block
    width: 100%

    &option
        display: block
        line-height: 2em
        color: rgba($-melon-colors.black, .54)
        cursor: pointer
        position: relative

        > input
            display: none

        > .{$-melon-class-prefix}-icon
            margin-right: 0.5em
            font-size: $-melon-large-font-size
            vertical-align: middle
            transition: all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms
            position: relative
            z-index: 1

        .{$-melon-class-prefix}-center-ripple-circle
            height: 18px
            width: 18px
            top: 50%
            margin-top: -7px

        > span
            vertical-align: middle

        &.state-checked

            > .{$-melon-class-prefix}-icon
                color: $-melon-colors.teal500

        &.state-disabled
            color: rgba($-melon-colors.black, .26)
            cursor: not-allowed

    &.state-invalid &option .ui-icon
        color: $-melon-colors.red500


