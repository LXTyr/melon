@import "./base.styl"

.{$-melon-class-prefix}-boxgroup

    display: inline-block
    width: 100%

    &option
        display: block
        line-height: 2em
        color: rgba($-melon-colors.black, .54)
        cursor: pointer

        > input
            display: none

        > .{$-melon-class-prefix}-icon
            margin-right: 0.5em
            font-size: $-melon-large-font-size
            vertical-align: middle
            transition: all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms

        > span
            vertical-align: middle

        &.state-checked

            > .{$-melon-class-prefix}-icon
                color: $-melon-colors.teal500

        &.state-disabled
            color: rgba($-melon-colors.black, .26)
            cursor: not-allowed
