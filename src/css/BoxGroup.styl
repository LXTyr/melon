@import "./base.styl"


$-melon-checkbox = {

    display: inline-block

    position: relative

    outline: 0
    vertical-align: middle
    overflow: hidden

    border: none

    // Gets rid of tap active state
    -webkit-tap-highlight-color: transparent

    font-size: $-melon-medium-font-size
    color: $-melon-colors.darkBlack

    cursor: pointer
}

$-melon-checkbox-icon = {

    overflow: hidden

    position: absolute
    top: 0
    left: 0

    transition: all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms
}

.{$-melon-class-prefix}-radio

    padding-left: 1.5em
    line-height: 1.25em

    .{$-melon-class-prefix}-icon

        font-size: 1.2em
        width: 1.5em
        height: 1.5em

.{$-melon-class-prefix}-checkbox

    padding-left: 2em
    line-height: 1.48em

    .{$-melon-class-prefix}-icon

        font-size: 1.5em
        width: 2em
        height: 2em


.{$-melon-class-prefix}-radio,
.{$-melon-class-prefix}-checkbox

    {$-melon-checkbox}

    .{$-melon-class-prefix}-icon

        {$-melon-checkbox-icon}

        &.variant-checked

            color: $-melon-colors.cyan500

    &-label

        cursor: inherit

    &-input

        display: none

    &.state-disabled

        .{$-melon-class-prefix}-icon

            color: $-melon-colors.lightBlack


.{$-melon-class-prefix}-boxgroup

    display: inline-block

    .{$-melon-class-prefix}-radio,
    .{$-melon-class-prefix}-checkbox
        margin-left: 1.5em

        &:first-child
            margin-left: 0

