@import "./base.styl"


.{$-melon-class-prefix}-ripple-circle
    position: absolute
    top: 0
    left: 0
    height: 100%
    width: 100%
    border-radius: 100em


.{$-melon-class-prefix}-touch-ripple
    height: 100%
    width: 100%
    position: absolute
    top: 0
    left: 0
    overflow: hidden
    z-index: 1

    &-circle
        background-color: $-melon-colors.darkBlack
        position: absolute
        top: 0
        left: 0
        border-radius: 100em
