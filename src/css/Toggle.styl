@import "./base.styl"


$-melon-toggle-bar = {

    transition: all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms
    width: 100%
    height: 0.8em
    border-radius: 30px
    background-color: rgba(0, 0, 0, 0.258824)

}


.{$-melon-class-prefix}-toggle

    display: inline-block
    position: relative
    cursor: pointer

    melon-clearfix()

    &.state-disabled

        cursor: not-allowed

        .{$-melon-class-prefix}-toggle-circle
            background-color: $-melon-colors.grey400

        .{$-melon-class-prefix}-toggle-bar
            background-color: $-melon-colors.faintBlack

    > input
        display: none

    &-label

        display: block
        float: left
        height: 1.2em
        line-height: 1.2em
        padding: 0;
        margin-left: 0.8em

    &-label-left
        margin-left: 0

    &-bar-container

        position: relative
        display: inline-block
        transition: all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms
        width: 2em
        margin-right: 0
        margin-left: 0.8em
        padding: 0.2em 0px 0.2em 0.1em

        float: left

    &-circle
        transition: all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms
        box-sizing: border-box
        -webkit-tap-highlight-color: rgba(0, 0, 0, 0)
        box-shadow: rgba(0, 0, 0, 0.117647) 0px 1px 6px
        border-radius: 50%
        position: absolute
        top: 0
        left: 0
        width: 1.2em
        height: 1.2em
        line-height: 2em
        background-color: $-melon-colors.white

    &-bar
        {$-melon-toggle-bar}
