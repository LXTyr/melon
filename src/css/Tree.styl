@import "./base.styl"

@require './Icon.styl'

$-melon-tree = {
    list-style: none
}

$-melon-treenode = {
    cursor: pointer
    line-height: 1em
    transition: all 0.8s linear 0ms
    position: relative
}

.{$-melon-class-prefix}-tree
    & > li > ul > li
        & > .{$-melon-class-prefix}-treenode-label
            padding-left: 2.6em
        & > .{$-melon-class-prefix}-icon
            left: 1.45em
        & > ul > li
            & > .{$-melon-class-prefix}-treenode-label
                padding-left: 3.8em
            & > .{$-melon-class-prefix}-icon
                left: 1.45em

.{$-melon-class-prefix}-tree

    {$-melon-tree}

    .{$-melon-class-prefix}-icon

        font-size: 1.2em
        color: $-melon-colors.grey500
        position: absolute
        top: 0.25em
        left: 0.25em

    .{$-melon-class-prefix}-treenode

        {$-melon-treenode}

        &-label

            display: block
            margin: 0.5em
            padding: 0.5em 1.2em
            border-radius: 0.2em

            &:hover
                background-color: $-melon-colors.cyan100

            &.state-selected
                font-weight: 700
                color: $-melon-colors.white
                background-color: $-melon-colors.cyan200


    .{$-melon-class-prefix}-treenode-root

        overflow: hidden
        transition: all .3s ease 0s
        height: 0

        &.state-expand

            height: auto
            overflow: auto
