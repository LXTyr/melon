.home
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100vh;
    background: linear-gradient(to left bottom, hsl(100, 100%, 85%) 0%,hsl(159, 100%, 85%) 100%)

    .logo
        height: 10rem
        margin: 2rem
        background: url(./logo.png) center center no-repeat;

    .title
        font-size: 1.5rem
        text-align: center
        color: #000

    .desc
        margin-top: 1rem;
        color: #333

    .buttons
        margin-top: 2rem
        display: flex;
        justify-content: center

        .ui-button

            width: 6rem

            &:nth-child(2)
                margin-left: 1rem;
