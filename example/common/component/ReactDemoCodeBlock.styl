@require '../../../src/css/mixin.styl';
@require 'prism-theme-one-dark/prism-onedark.css';

.react-code-block-demo

    box-shadow: rgba(0, 0, 0, .18) 0 1px 2px
    margin-bottom: 1rem

    >header
        height: 3rem;
        display: flex;
        align-items: center;
        background-color: #e8e8e8;
        border-top-right-radius: 3px;
        border-top-left-radius: 3px;
        cursor: pointer;

        >label
            flex: 1 1 auto
            margin-left: 1rem
            cursor: pointer;

        >.ui-tooltip
            margin-right: 0.5rem
            >.ui-button
                font-size: 1.5rem

    >section
        overflow: hidden
        transition: max-height .3s ease-out

        >pre
            margin-bottom: 0
            border-top-left-radius: 0;
            border-top-right-radius: 0;
            margin-top: 0 !important;

    >div
        padding: 1rem;

